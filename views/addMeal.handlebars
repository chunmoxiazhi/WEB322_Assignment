<div class="content row">
    <div class="mealForm">
        <div class="col-md-12">
            <h2>Add Meal Package</h2>
            <hr >
            <form method="post" action="/addMeal" enctype="multipart/form-data" class="mealModify">
                <fieldset>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="name">Package Name:</label>
                                <input class="form-control" id="name" name="name" type="text" />
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="price">Category: </label>
                                <input class="form-control" id="category" name="category" type="text" />
                            </div>
                        </div>
                
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="price">Price: </label>
                                <input class="form-control" id="price" name="price" type="text" />
                            </div>
                        </div>
                
                    
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="description">Description: </label>
                                <input class="form-control" id="description" name="description" type="text"  />
                            </div>
                        </div>
                
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="number_meals">Meals included:</label>
                                <input class="form-control" id="number_meals" name="number_meals" type="number" />
                            </div>
                        </div>
                
                        <div class="col-md-1">
                            <div class="form-group">
                                <label for="top">Top Meal:</label>
                                <input class="form-control" type="checkbox" name="top" />
                            </div>
                        </div>
            

                        <div class="col-md-8">
                            <label for="photo">Meal Photo</label>
                            <input id="photo" type="file" name="photo"/><br />
                        </div>
                    </div>
                </fieldset>
                <hr>
                <input type="submit" class="btn btn-primary pull-right" value="Add Meal" /><br /><br /><br />
            </form>
        </div>
    </div>
</div>